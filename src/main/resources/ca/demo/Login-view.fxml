      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../assets/key.png" />
               </image>
            </ImageView>
         </children>
         <padding>
            <Insets bottom="10.0" />
