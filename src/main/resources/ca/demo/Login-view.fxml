          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <Label text="Login" textFill="#3b503d">
            <font>
               <Font name="Calibri Bold" size="23.0" />
            </font>
         </Label>
         <Label text="To Enter: username: user1 password: pass1 ">
            <font>
               <Font name="System Italic" size="12.0" />
            </font>
         </Label>
         <TextField fx:id="usernameTF" minHeight="40.0" prefHeight="40.0" promptText="Username" style="-fx-background-color: #f1edb3;" />
