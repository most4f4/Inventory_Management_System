<BorderPane prefHeight="877.0" prefWidth="959.0" style="-fx-background-color: #3b503d; -fx-border-color: #fffcd4; -fx-border-width: 20px;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.demo.Controllers.LoginController">
